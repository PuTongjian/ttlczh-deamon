{
  "name": "electron-wss-daemon-manager",
  "version": "1.0.0",
  "description": "Electron WSS Daemon Manager for CloudLinkKitDaemon",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:5173 && electron .\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "generate-cert": "node src/scripts/generate-cert.js",
    "pack": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false SKIP_NOTARIZATION=true electron-builder --dir",
    "dist": "pnpm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false SKIP_NOTARIZATION=true electron-builder",
    "dist:win": "pnpm run clean:cache && pnpm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false SKIP_NOTARIZATION=true electron-builder --win",
    "dist:win:sign": "pnpm run build && electron-builder --win --config.win.sign=true",
    "dist:win:no-sign": "pnpm run clean:cache && pnpm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false SKIP_NOTARIZATION=true electron-builder --win",
    "clean:cache": "if exist \"%LOCALAPPDATA%\\electron-builder\\Cache\" rmdir /s /q \"%LOCALAPPDATA%\\electron-builder\\Cache\" && if exist \"%LOCALAPPDATA%\\electron-builder\\Cache\\winCodeSign\" rmdir /s /q \"%LOCALAPPDATA%\\electron-builder\\Cache\\winCodeSign\""
  },
  "keywords": [
    "electron",
    "wss",
    "daemon"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "node-forge": "^1.3.1",
    "ws": "^8.16.0"
  },
  "build": {
    "appId": "com.electron.wss-daemon-manager",
    "productName": "WSS Daemon Manager",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "resources/**/*",
      "CloudlinkKitSDK.zip",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "CloudlinkKitSDK.zip",
        "to": "CloudlinkKitSDK.zip"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "requireAdministrator",
      "icon": "resources/icon.ico",
      "sign": false,
      "signDlls": false,
      "signingHashAlgorithms": [],
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "include": "build/installer.nsh",
      "script": "build/installer.nsh"
    }
  }
}